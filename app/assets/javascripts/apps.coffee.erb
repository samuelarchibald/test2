# variables
AppUrl = false
clicked = false

highlightError = (div) ->
	div.animate {
	    'borderColor': '#ff0000'
	  }, 500, ->


unhighlightError = (div) ->
	div.animate {
	    'borderColor': 'inherit'
	  }, 500, ->


changeHeightAndOpacityToZero = (div) ->
	div.animate {
		    opacity: 0,
		    height: 0
		  }, 500, ->


changeHeightAndOpacityToTwentyAndOne = (div, x) ->
	div.animate {
		    opacity: 1,
		    height: x
		  }, 500, ->


shakeButton = ->
	$('.initial-new-app-button').effect('shake', distance:7, times:3, 500)


appPriceExplanation = ->
	$('.app-price').click ->
		text = $('.app-price-text')
		changeHeightAndOpacityToTwentyAndOne(text, 35)
	$('.app-price').change ->
		text = $('.app-price-text')
		changeHeightAndOpacityToZero(text)


urlHttpCheck = ->
	$('.app-url').change ->
		url = $('.app-url').val()
		text = $('.app-url-text')
		if url
			isurl = url.indexOf("http") > -1
			if isurl
				AppUrl = true
				changeHeightAndOpacityToZero(text)
			else
				AppUrl = false
				changeHeightAndOpacityToTwentyAndOne(text, 20)
		else
			changeHeightAndOpacityToZero(text)


appDescriptionEnlarge = ->
	$('.app-description').click ->
		$('.app-description').animate {
			    height: 100
			  }, 500, ->
			    # Animation complete.




$ ->                      
	appPriceExplanation()
	urlHttpCheck()
	appDescriptionEnlarge()
	storeClick = false

	$('.iTunes').click ->
		itunes = "iTunes"
		itunesDiv = $('.iTunes')
		document.getElementById('app_store').value = itunes
		itunesDiv.addClass('third-store-seleted')
		$('.Google').removeClass('third-store-seleted')
		$('.Windows').removeClass('third-store-seleted')
			

	$('.Google').click ->
		Google = "Google"
		document.getElementById('app_store').value = Google
		$('.Google').addClass('third-store-seleted')
		$('.iTunes').removeClass('third-store-seleted')
		$('.Windows').removeClass('third-store-seleted')

	$('.Windows').click ->
		Windows = "Windows"
		document.getElementById('app_store').value = Windows
		$('.Windows').addClass('third-store-seleted')
		$('.Google').removeClass('third-store-seleted')
		$('.iTunes').removeClass('third-store-seleted')


	#button logic, and error checking
	$('.new-app-button').click ->
		appName = $('.app-name').val()
		appPrice = $('.app-price').val()
		appPriceIsNumber = false
		appStore = $('.app-store').val()
		name = $('.app-name')
		price = $('.app-price')
		store = $('.app-store')
		url = $('.app-url')

		if isNaN(appPrice)
			$('.app-price-number-text').animate {
		    opacity: 1,
		    height: 20
		  }, 500, ->
		  	highlightError(price)
		else
			appPriceIsNumber = true

		if (AppUrl) and (clicked == false) and (appName != '') and (appPrice != '') and (appStore != '') and (appPriceIsNumber) and ($("#app_store").val() != '')
			$('.new-app-button').toggleClass('hidden')
			clicked = true
		else
			shakeButton()
			if (appName == '')
				highlightError(name)
			else
				unhighlightError(name)
			if (appPrice == '')
				highlightError(price)
			else
				unhighlightError(price)
			if (appStore == '')
				highlightError(store)
			else
				unhighlightError(store)
			if (AppUrl == false) || (url.val() == '')
				highlightError(url)
			else
				unhighlightError(url)

	#stripe payments
	handler = StripeCheckout.configure(
	  key: '<%= Rails.configuration.stripe[:publishable_key] %>'
	  token: (token, arg) ->
	    document.getElementById('stripeToken').value = token.id
	    document.getElementById('stripeEmail').value = token.email
	    document.getElementById('new_app').submit()
	    return
	)
	document.getElementById('thisbutton').addEventListener 'click', (e) ->
	  document.getElementById('appName').value = document.getElementById('nameField').value
	  document.getElementById('appStore').value = document.getElementById('app_store').value
	  document.getElementById('appUrl').value = document.getElementById('urlField').value
	  document.getElementById('appDescription').value = document.getElementById('descriptionField').value
	  handler.open
	    name: 'Silicon Beach App Awards'
	    description: 'One App Nomination ($149.99)'
	    amount: document.getElementById('amount').value
	  e.preventDefault()
	  return

			
