<div class="container down app-show">
  <div class="panel panel-custom">
    <div class="top-image">
      <%= image_tag @app.image.url %>
    </div>
    <div class="title">
      <h1><%= @app.name %></h1>
      <div class="link">
        <%= link_to 'APP STORE LINK', @app.url %>
      </div>
    </div>
    Store:<%= @app.store %>

    
  <% if @app.user == current_user %>
    <%= link_to 'Edit', edit_app_path(@app) %> |
  <% end %>
    <%= link_to 'Back', apps_path %>
  </div>


</div>   

