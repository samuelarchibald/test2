<div class="container down">
    <div class="devise-container">
      <div class="title">
        <h2>Sign up</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :company_name, autofocus: true, class: "form-control", placeholder: 'Company Name' %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, class: "form-control", placeholder: 'Email'%>
        </div>

        <div class="form-group">
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Password' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Password Conformation' %>
        </div>

        <div class="actions">
          <div class="action-button">Sign Up</div>
        </div>


        <%= f.submit "Sign up", class: 'action-button hidden' %>
      <% end %>
      <div class="footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>